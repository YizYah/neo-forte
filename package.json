{
  "name": "neo-forte",
  "version": "1.0.0",
  "description": "a simple querying interface for a neo4j database",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "YizYah/neo-forte",
  "scripts": {
    "build": "tsc",
    "commit": "git-cz",
    "coverage": "nyc npm test",
    "int-test": "ava --config int-tests.config.cjs",
    "lint": "eslint \"src/**/*.ts\"",
    "lint-fix": "eslint \"src/**/*.ts\" --fix",
    "prepack": "rm -rf lib && tsc -b",
    "report": "nyc report --reporter=json",
    "test": "ava",
    "update": "npm i neo4j-driver@latest neo4j-driver-core@latest",
    "view-coverage": "nyc --extension .ts ava --forbid-only"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "neo4j",
    "neo-forgery",
    "neo4j-driver",
    "query",
    "run",
    "graph"
  ],
  "author": "YizYah",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "ava": "^5.3.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "neo-forte": "^1.3.0",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "semantic-release": "^19.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "ava": {
    "files": [
      "test/**/*.test.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run lintfix && npm run test"
    }
  },
  "dependencies": {
    "cd": "^0.3.3",
    "dotenv": "^16.1.4",
    "neo-forgery": "^2.0.0",
    "neo4j-driver": "^5.9.1",
    "neo4j-driver-core": "^5.9.1"
  }
}
